//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit2.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm2 *Form2;
//---------------------------------------------------------------------------
__fastcall TForm2::TForm2(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm2::BitBtn1Click(TObject *Sender)
{
	AnsiString ConStr, Path;
	ConStr="Provider=Microsoft.Jet.OLEDB.4.0;Data Source=";
	if (!OpenDialog1->Execute())
	{
		return;
	}
	Path=OpenDialog1->FileName;
	ConStr=ConStr+Path;
	ADOConnection1->ConnectionString=ConStr;
	ADOConnection1->Connected=true;
	ADOConnection1->GetTableNames(ComboBox1->Items);
}
//---------------------------------------------------------------------------
void __fastcall TForm2::BitBtn3Click(TObject *Sender)
{
	if (ADOConnection1->Connected==false)
	{
		MessageDlg("Откройте базу данных", mtInformation, TMsgDlgButtons()<<mbOK, 0);
		return;
	}
	if (ComboBox1->Text.Length()==0)
	{
		MessageDlg("Выберите таблицу", mtError, TMsgDlgButtons()<<mbOK, 0);
		return;
	}
	if (ADOTable1->Active==true)
	{
		ADOTable1->Active==false;
	}
	ADOTable1->TableName=ComboBox1->Text;
	ADOTable1->Active=true;
	BitBtn4->Enabled=true;
	BitBtn5->Enabled=true;
	GetDBState();
}
//---------------------------------------------------------------------------
void __fastcall TForm2::BitBtn2Click(TObject *Sender)
{
	if (ADOConnection1->Connected==false)
	{
		MessageDlg("База данных не открыта", mtInformation, TMsgDlgButtons()<<mbOK,0);
		return;
	}
	if (MessageDlg("Отключить базу данных?", mtConfirmation, TMsgDlgButtons()<<mbYes<<mbNo, 0)==mrNo)
	{
		return;
	}
	ADOTable1->Active=false;
	ADOConnection1->Connected=false;
	ComboBox1->Clear();
	ComboBox2->Clear();
	ComboBox3->Clear();
	BitBtn4->Enabled=false;
	BitBtn5->Enabled=false;
}
//---------------------------------------------------------------------------
void __fastcall TForm2::GetDBState()
{
	ComboBox2->Clear();
	ADOTable1->First();
	while (!ADOTable1->Eof)
	{
		ComboBox2->Items->Append(ADOTable1->Fields->FieldByName("Студент")->AsString);
		ADOTable1->Next();
	}
	ComboBox3->Clear();
	for (int i = 2; i<ADOTable1->FieldList->Count;i++)
	{
		ComboBox3->Items->Append(ADOTable1->FieldList->Strings[i]);
    }
}
void __fastcall TForm2::BitBtn4Click(TObject *Sender)
{
	if (ComboBox1->Text.Length()==0)
	{
		MessageDlg("Выберите студента", mtInformation, TMsgDlgButtons()<<mbOK,0);
	}
	int sum = 0;
	double sred;
	ADOTable1->First();
	ADOTable1->MoveBy(ComboBox1->ItemIndex);
	for (int i = 2; i < ADOTable1->FieldCount;i++)
	{
		sum+=ADOTable1->Fields->Fields[i]->AsInteger;
	}
	sred=(float)sum/(ADOTable1->FieldCount-2);
	MessageDlg(ADOTable1->Fields->Fields[1]->AsString+(char)13+"Средний балл: " + FloatToStr(sred), mtInformation, TMsgDlgButtons()<<mbOK,0);
}
//---------------------------------------------------------------------------

